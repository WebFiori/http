{
    "name": "webfiori/http",
    "type": "library",
    "description": "Basic library that can help in creating RESTful APIs using PHP.",
    "keywords": [
        "JSON",
        "PHP",
        "API",
        "Web APIs",
        "Library",
        "HTTP",
        "PSR-7",
        "JSONx"
    ],
    "version": "4.0.0",
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "webfiori/jsonx": "4.0.x",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "WebFiori\\Http\\": "WebFiori/Http"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebFiori\\Tests\\Http\\": "tests/WebFiori/Tests/Http/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test-10": "phpunit --configuration tests/phpunit10.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
